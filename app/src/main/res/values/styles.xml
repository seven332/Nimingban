<resources>

    <!-- Progress View -->
    <style name="ProgressView">
        <item name="color">?attr/colorAccent</item>
        <item name="indeterminate">true</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ProgressView.Small">
        <item name="android:minWidth">16dp</item>
        <item name="android:minHeight">16dp</item>
    </style>

    <style name="ProgressView.Large">
        <item name="android:minWidth">76dp</item>
        <item name="android:minHeight">76dp</item>
    </style>

    <style name="CardButton">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Slider">
        <item name="thickness">2dp</item>
        <item name="radius">6dp</item>
        <item name="color">?attr/colorAccent</item>
        <item name="textColor">@android:color/white</item>
        <item name="textSize">12sp</item>
        <item name="dark">?attr/dark</item>
    </style>

    <style name="Widget.Design.Snackbar" parent="android:Widget">
        <item name="android:minWidth">@dimen/design_snackbar_min_width</item>
        <item name="android:maxWidth">@dimen/design_snackbar_max_width</item>
        <item name="android:background">?attr/colorPureInverse</item>
        <item name="android:paddingLeft">@dimen/design_snackbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/design_snackbar_padding_horizontal</item>
        <item name="elevation">@dimen/design_snackbar_elevation</item>
        <item name="maxActionInlineWidth">@dimen/design_snackbar_action_inline_max_width</item>
    </style>

    <style name="Indicating">
        <item name="indicatorHeight">1dp</item>
        <item name="indicatorColor">?attr/colorDivider</item>
    </style>

</resources>
