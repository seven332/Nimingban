<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hippo.nimingban.widget.DoodleView
        android:id="@+id/doodle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/side"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorPrimary">

            <ImageView
                android:id="@+id/palette"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/v_palette_dark_x24"/>

            <ImageView
                android:id="@+id/thickness"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/v_broom_dark_x24"/>

            <ImageView
                android:id="@+id/draw_action"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"/>

            <ImageView
                android:id="@+id/undo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"/>

            <ImageView
                android:id="@+id/redo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"/>

            <ImageView
                android:id="@+id/clear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/v_delete_dark_x24"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ok"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/v_check_dark_x24"/>

        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_left"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right|top"
        android:padding="12dp"
        app:srcCompat="@drawable/v_menu_x24"/>

</FrameLayout>
